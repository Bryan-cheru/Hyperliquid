# MongoDB Configuration for HyperLiquid Trading Platform

# Database Connection
MONGODB_URI=mongodb://localhost:27017/hyperliquid_trading
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/hyperliquid_trading

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-for-user-sessions

# Application Settings
NODE_ENV=development
PORT=5175

# HyperLiquid API (if needed)
HYPERLIQUID_API_BASE=https://api.hyperliquid.xyz

# Data Retention (days)
DATA_RETENTION_DAYS=90
MARKET_DATA_RETENTION_HOURS=72

# Performance Settings
DB_CONNECTION_POOL_SIZE=10
DB_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Backup Settings (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
